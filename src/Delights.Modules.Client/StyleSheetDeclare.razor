@inject ModuleCollection Collection
@inject IServiceProvider ServiceProvider

@foreach (ClientModule c in Collection.AllClientModules())
{
    foreach (var r in c.GetUI(ServiceProvider).Resources)
    {
        if (r.Type is UIResourceType.StyleSheet)
        {
            @((MarkupString)($"<link type=\"text/css\" rel=\"stylesheet\" href=\"{r.Path}\" {Delights.Modules.Client.CoreClientModuleUI.ResourceTagAttrName}=\"{r.Path}\"/>"))
        }
    }
}