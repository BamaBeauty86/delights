@inject IModuleHost ModuleHost
@inject IServiceProvider ServiceProvider

@foreach (var c in ModuleHost.Modules.AllSpecifyModules<IRazorComponentClientModule>())
{
    foreach (var r in c.GetUI(ServiceProvider).Resources)
    {
        if (r.Type is UIResourceType.Script)
        {
            @((MarkupString)($"<script type=\"text/javascript\" src=\"{r.Path}\" {Delights.Modules.Client.RazorComponents.Core.ModuleUI.ResourceTagAttrName}=\"{r.Path}\"></script>"))
        }
    }
}
