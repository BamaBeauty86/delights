@inject IModuleCollection Collection
@inject IServiceProvider ServiceProvider

@foreach (var c in Collection.AllSpecifyModules<IClientModule>())
{
    foreach (var r in c.GetUI(ServiceProvider).Resources)
    {
        if (r.Type is UIResourceType.StyleSheet)
        {
            @((MarkupString)($"<link type=\"text/css\" rel=\"stylesheet\" href=\"{r.Path}\" {Delights.Modules.Client.RazorComponents.Core.ModuleUI.ResourceTagAttrName}=\"{r.Path}\"/>"))
        }
    }
}